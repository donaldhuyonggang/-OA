
@{
    ViewBag.Title = "Back";
    Layout = "~/Views/Background/BackgroundPage1.cshtml";
}
@using 公司管理系统Model
@section style{
    <style>
        #b {
            font-size: 50px;
        }

        #a {
            font-size: 35px;
            margin-left: 12%;
        }

        .ai {
            margin-left: 0%;
        }

        #o {
            margin-top: 5%;
        }

        .i {
            margin-top: 5%;
        }
    </style>
}
<div class="row">
    <div style=" margin: 30px;" class="col-lg-12">
        <div class="btn btn-success " id="a">
            <p class="txt-center ">公司所有人员</p>
            <p class="text-center " id="b">@ViewBag.Use</p>
        </div>
        <div class="btn btn-primary " id="a">
            <p class="txt-center">公司在职人员</p>
            <p class="text-center" id="b">@ViewBag.Use1</p>
        </div>
        <div class="btn btn-danger " id="a">
            <p class="txt-center">公司离职人员</p>
            <p class="text-center" id="b">@ViewBag.Use2</p>
        </div>
    </div>
</div>
    <div>
        <div class="i">
            <table class="ai table table-striped " border="1">


                <text style="text-align:center"><a href="#" class=" btn btn-danger">本周课表</a></text>
                <tr>
                    <th class="text-center">日期</th>
                    <th class="text-center">上午课表</th>
                    <th class="text-center">上午课表</th>
                    <th class="text-center">卫生人员</th>
                    <th class="text-center">卫生人员</th>
                    <th class="text-center">注意事件</th>
                </tr>
                @foreach (var item in ViewBag.Use3)
                {
                    <tr class="text-center">
                        <td>@item.DataTime</td>
                        <td>@item.Morning</td>
                        <td>@item.Afertnoon</td>
                        <td>@item.User.UserName</td>
                        <td>@item.User1.UserName</td>
                        <td>@item.require</td>
                    </tr>
                }


            </table>
        </div>
        <div class="container-fluid" id="o">
            <div class="row">
                <div class="col-sm-6">

                    <table border="1" class="table table-striped">
                        <text style="text-align:center"><a href="#" class="btn btn-warning">最热讨论</a></text>
                        <tr> 
                            <th>标题</th>
                            <th>文章类型</th>
                            <th>发布人</th>
                            <th>发布时间</th>
                            <th>点赞量</th>
                        </tr>
                        @foreach (var item in (List<web>)ViewBag.Use4)
                        {
                            <tr>
                                <td>@item.webHead</td>
                                <td>@item.web_type.web_typeName</td>
                                <td>@item.User.UserName</td>
                                <td>@item.webtime</td>
                                <td>@item.like</td>
                            </tr>
                        }

                    </table>

                </div>
                <div class="col-sm-6">
                    <table border="1" class="table table-striped">
                        <text style="text-align:center"><a href="#" class="btn btn-primary">最新活动</a></text>
                        <tr>
                            <th>标题</th>
                            <th>策划人</th>
                            <th>活动时间</th>
                            <th>所需金额</th>
                            <th>实际金额</th>
                        </tr>
                        @foreach (var item in (List<action>)ViewBag.Use5)
                        {
                            <tr>
                                <td>@item.actionhead</td>
                                <td>@item.User.UserName</td>
                                <td>@item.actiontime</td>
                                <td>@item.actionneedmoney</td>
                                <td>@item.actionfactmoney</td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>

 