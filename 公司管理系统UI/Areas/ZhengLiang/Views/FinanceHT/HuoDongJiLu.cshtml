
@{
    ViewBag.Title = "HuoDongJiLu";
     Layout = "~/Views/Background/BackgroundPage1.cshtml";
}
@using 公司管理系统Model
@model action

 

@section style{
  
    <style>
        .div_t {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .div h1 {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 10px 0px;
            font-size: 24px;
        }

        .div .div_us {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0px;
        }

        .submit {
            
            min-width: 100px;
        }

        .div table tr th {
            min-width: 80px;
            text-align: center;
            margin-top: -10px;
        }

        .div table tr td {
            min-width: 80px;
            text-align: center;
        }

        .count {
            text-align: center;
        }

        .count {
            text-align: center;
        }

            .count span {
                margin-right: 20px;
                color: #000000;
            }

        .count_a {
            margin-right: 20px;
        }
    </style>

 }


    <div class="div_t">
        <div class="div">
            <h1>活动记录</h1>
            <div class="div_us">
                @using (Html.BeginForm("HuoDongJiLu", "FinanceHT", FormMethod.Post))
            {
                    <p>
                        活动标题:<input type="text" name="actionhead" class="input-sm"   />
                        状态：<input type="radio" checked name="action_Condition" value="全部" />全部
                        <input type="radio" name="action_Condition" value="可见" />可见
                        <input type="radio" name="action_Condition" value="不可见" />不可见
                        <input type="submit" value="查询" class="submit btn-warning" />
                    </p>
                }
            </div>
            <table class="table table-hover">
                <tr>
                    <th>活动编号</th>
                    <th>活动标题</th>
                    <th>活动内容</th>
                    <th>活动日期</th>
                    <th>活动所需经费</th>
                    <th>活动实际经费</th>
                    <th>活动策划人</th>
                    <th>是否批准</th>
                    <th>活动状态</th>
                    <th>操作</th>
                    <th>操作</th>
                    <th>操作</th>
                </tr>
                @foreach (var item in (List<action>)ViewBag.list)
            {
                    <tr>
                        <td>@item.actionId</td>
                        <td>@item.actionhead</td>
                        <td>@item.actionresult</td>
                        <td>@item.actiontime</td>
                        <td>@item.actionneedmoney</td>
                        <td>@item.actionfactmoney</td>
                        <td>@item.User.UserName</td>
                        <td>@item.actiontype</td>
                        <td>@item.action_Condition</td>
                        <td><a href="~/ZhengLiang/FinanceHT/XiuGaiHuoDong?id=@item.actionId" data-toggle="modal" data-target="#myModal" class="btn-primary btn-block">修改</a></td>
                        <td><a href="~/ZhengLiang/FinanceHT/HuoDongUpdate?id=@item.actionId" class="btn-success btn-block">通过</a></td>
                        <td><a href="~/ZhengLiang/FinanceHT/HuoDongDelete?id=@item.actionId" class="btn-danger btn-block btn-danger">可见/不可见</a></td>
                    </tr>
                }
            </table>
            <div class="count">
                <a href="#" class="btn-primary btn-xs">首页</a>
                <a href="~/ZhengLiang/FinanceHT/HuoDongJiLu?current=@(ViewBag.current-1)" class="count_a btn-success btn-sm">上一页</a>
                <span>@ViewBag.zongshu</span>
                <a href="~/ZhengLiang/FinanceHT/HuoDongJiLu?current=@(ViewBag.current+1)" class="btn-success btn-sm">下一页</a>
                <a href="#"class="btn-primary btn-xs">尾页</a>
            </div>
        </div>
    </div>



    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


 