
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Proscenium/ProsceniumPage1.cshtml";
}
@using 公司管理系统Model
@model List<web>
@section styles{
    <style>
       
        #bnts {
        padding-top:10px;
        }
         .modal-body {
           
            }
        *{
            margin:0px;
            padding:0px;
        }
      
        #touxiang {
            width: 150px;
            height: 150px;
        }
        .yonghutouxiang{
            width:65px;            height:65px;
            border-radius:35px;
        }
        .yonghupingluntouxiang{
            width:45px;            height:45px;
            border-radius:35px;
        }
        #yonghuname{
            font-size:24px;
            color:#00ffff;

        }
        #xuanxiang{
            display:flex;
            justify-content:center;
            font-family:YouYuan;
            font-size:14px;
        }
        #xuanxiang li{
            width:80px;
            list-style:none;
            margin-left:15px;
        }
        
        #zhongjian{
            margin-top:15px;
            display:flex;
            justify-content:center;
        }
        .neirong{
            display:flex;
            justify-content:center;
            height:500px;
        }
        #shu{
            width:100%;
            list-style:none;
        }
        .diyi {
            display: flex;
            justify-content: center;
            border-radius:5px;
            background-image: url('../../../../imges/未标题-1.jpg');
        }
        #zuoimg {
            width: 22%;
            height: 1030px;
            margin-right: 15px;
            background-color:lightcyan;
        }
        #youimg {
            width: 22%;
            height: 1030px;
            margin-left: 15px;
            background-color:lightcyan;
        }
        .fabuul{
            display:flex;
            justify-content:center;
            margin-top:15px;

        }
        .fabuul li{
            list-style:none;
        }
        .fabushijian{
            font-family:YouYuan;
            font-size:12px;
        }
        #ppp {
            background-image: url('../img/iop.jpg');
        }
        .fb{
            background-color:lightgoldenrodyellow;
        }
        .fb div{
            margin-left:5px;
        }
        .xm{
            margin-top:20px;
            display:flex;
            justify-content:center;
        }
        .yhpl{
            width:90%;
            height:40px;
            display:flex;
            margin-bottom:20px;
            justify-content:center;
        }
        #fabu{
            display:flex;
            justify-content:center;
        }
        #fabu li{
            list-style:none;
        }
        .pl{
            margin-top:15px;
            margin-bottom:15px;
        }
        .plul{
            display:flex;
            justify-content:center;
        }
        .plul li{
            list-style:none;
        }
        .fabupinlunshijian{
            font-family:YouYuan;
            font-size:12px;
        }
        .sp {
            background-image: url('../../../../imges/未标题-1.jpg');
        }
        .fabiaotupian{
            display:flex;
            justify-content:center;
        }
        body{
            background-color:#dbd3d3;
        }
        .fabiaotupian img{
            width:350px;
            height:250px;
        }
        .fb{
            border-radius:5px;
        }
        #toubu{
            margin-bottom:50px;
        }
        .datou {
        padding-top:120px;
        
        background-color:black ;
        }
        .ass {
        width:60%;
        }
    </style>
}
<script src="~/Scripts/jquery-1.8.3.js"></script>
   
<div class="datou">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-lg-1">
                        @foreach (var item in (List<User>)ViewBag.list3)
                        {
                            <table>
                                <tr>
                                    <td>
                                        <div id="touxiang">
                                            <img src="~/Content/images/@item.Userimg"  style="width:65px;     border-radius:35px;        height:65px;" />
                                        </div>
                                    </td>
                                    <td>
                                        <table style="height:150px">
                                            <tr>
                                                <td>
                                                    <p id="yonghuname">用户名:@item.UserName</p>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <a href="/LiaoWeiYing/Home/As" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                                        我要发布
                                                    </a>

                                                    <div id="myModal" class="modal fade">
                                                        <div class="modal-dialog">

                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <ul id="xuanxiang" class="nav nav-pills">
                                                        @foreach (var item1 in (List<web_type>)ViewBag.list2)
                                                        {
                                                            <li role="presentation"><a href="/LiaoWeiYing/Home/Index/@item1.web_typeID">@item1.web_typeName</a></li>
                                                        }
                                                    </ul>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-10">
                        <ul>
                            @foreach (var item2 in (List<web>)Model)
                            {
                                <li class="fb">
                                    <div class="leirong">
                                        <ul class="fabuul">
                                            <li style="margin-right:20px;">
                                                <div class="yonghutouxiang">
                                                    <img src="~/Content/images/@item2.User.Userimg" style="width:65px;     border-radius:35px;        height:65px;" />
                                                </div>
                                            </li>
                                            <li>
                                                <ul>
                                                    <li style="margin-bottom:15px;">用户姓名:@item2.User.UserName</li>
                                                    <li class="fabushijian">发布时间:@item2.webtime</li>
                                                </ul>
                                            </li>
                                            <li style="width:70%;">

                                            </li>
                                            <li>
                                                <p>
                                                    @*删除*@
                                                    <a href="/LiaoWeiYing/Home/Zan?webId=@item2.webId&&like=@item2.like"   class="glyphicon glyphicon-thumbs-up"></a>
                                                    <a id="bnts" href="/LiaoWeiYing/Home/Delete?webId=@item2.webId&&UserId*@item2.UserId" class="glyphicon glyphicon-trash"></a>
                                                </p>
                                            </li>
                                        </ul>
                                    </div>
                                    <hr style="margin-bottom:10px;" />
                                    <div>
                                        <div class="fabiaotupian">
                                            <h4>
                                                @item2.webHead
                                            </h4>
                                        </div>
                                        <div class="fabiaotupian">
                                            @item2.webResult
                                        </div>
                                    </div>
                                    <div class="@item2.webId">
                                        @*Ajax局部刷新查询webId在追加回来*@
                                    </div>
                                    <form action="~/LiaoWeiYing/Home/Plun?webId=@item2.webId" method="post">

                                        <div class="xm">
                                            <div class="yhpl">
                                                <span name="sqll" hidden>@item2.webId</span>
                                                <input class="ass form-control"  name="ReplayResult" cols="50" rows="1" placeholder="说点儿什么把"><button type="submit" class="btn btn-default">发布评论</button>
                                            </div>
                                        </div>

                                    </form>
                                </li>
                            }
                            <li>
                                <nav>
                                    <ul class="pager">
                                        <li class="previous disabled"><a href="/LiaoWeiYing/Back/Index?pageIndex=@( ViewBag.pageIndex-1)">上一页<span aria-hidden="true">&larr;</span> Older</a></li>
                                        <li class="next"><a href="/LiaoWeiYing/Back/Index?pageIndex=@( ViewBag.pageIndex+1)">下一页 <span aria-hidden="true">&rarr;</span></a></li>
                                    </ul>
                                </nav>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(function () {
            $("[name='sqll']").each(function (dom, i) {
                $.post("/LiaoWeiYing/Home/AJ", { webId: $(this).text() }, function (data) {
                        for (var i = 0; i < data.length; i++) {
                            var PingLun = "<div class='pl'><div><hr /><ul class='plul'><li><div class='yonghupingluntouxiang'>" +
                                        "<img name='imgggg' src='~/Content/images/"+data[i].Userimg+"' style='width:45px;  height:45px; border-radius:35px;' />" +
                                        "</div></li><li><ul><li style='margin-bottom:10px; font-size:14px;'>" +
                                        "<span id='namess'>用户姓名:" + data[i].UserName + "</span>" +
                                        "<div  style='width:600px;'>评论内容:" + data[i].ReplayResult + "" +
                                                               " </div>" +
                                                           " </li>" +
                                                          "  <li class='fabupinlunshijian'>发布时间:" + data[i].ReplayTime + "</li>" +
                                                        "</ul>" +
                                                    "</li>" +
                                               " </ul>" +
                                           " </div>" +
                                        "</div>"
                            $("." + data[i].webId).append(PingLun);
                            alert("~/Content/images/" + data[i].Userimg + "")
                        }
                    
                   })//post提交结束
                })//each循环
        });//加载页面结束
        $("[name='zan']").toggle(function(){
        
        },function(){
        
        })
</script>