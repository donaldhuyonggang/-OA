
@{
    ViewBag.Title = "select";
    Layout = "~/Views/Proscenium/ProsceniumPage1.cshtml";
}
@Session style{
<link href="~/Content/bootstrap.css" rel="stylesheet" />
}

@using 公司管理系统Model
@model List<score>

<form style="margin-top:100px" action="/LiuYi/Pointqian/select" method="post">
    请输入日期：<input type="text" name="PointTime" />
    请输入名字：<input type="text" name="UserName"/>
    <button type="submit" class="btn btn-danger">查询</button>
</form>
<table class="table table-hover">
    <tr>
        <th>扣分时间</th>
        <th>扣分人</th>
        <th>扣分原因</th>
        <th>所扣分数</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PointTime</td>
            <td>@item.User.UserName</td>
            <td>@item.system.systemName</td>
            <td>@item.system.systemPoint</td>
        </tr>
    }
</table>